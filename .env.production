# Production Environment Variables
NODE_ENV=production

# Database (from Terraform output)
DATABASE_URL=postgresql://reportmate:${DB_PASSWORD}@reportmate-database.postgres.database.azure.com:5432/reportmate?sslmode=require

# Azure Services (from Terraform output)
AZURE_STORAGE_CONNECTION_STRING=${AZURE_STORAGE_CONNECTION_STRING}
QUEUE_NAME=osquery-ingest
EVENTS_CONNECTION=${WEB_PUBSUB_CONNECTION_STRING}

# Frontend Configuration
NEXT_PUBLIC_WPS_URL=wss://reportmate-signalr.webpubsub.azure.com/client/hubs/events
NEXT_PUBLIC_ENABLE_SIGNALR=true
NEXT_PUBLIC_API_BASE_URL=https://reportmate-api.azurewebsites.net

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=${APPINSIGHTS_INSTRUMENTATIONKEY}
APPLICATIONINSIGHTS_CONNECTION_STRING=${APPLICATIONINSIGHTS_CONNECTION_STRING}
